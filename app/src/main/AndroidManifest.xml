<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.project.ngopi">

    <uses-permission android:name="com.androidtutorialpoint.mymapsappsdirection.permission.MAPS_RECEIVE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/coffee1"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.project.ngopi.About">
        </activity>
        <activity android:name="com.project.ngopi.SetPostDetails">
        </activity>
        <activity android:name="com.project.ngopi.MapsActivity">
        </activity>
        <activity android:name="com.project.ngopi.HomeActivity">
        </activity>
        <activity android:name="com.project.ngopi.MainActivity">
        </activity>
        <activity android:name="com.project.ngopi.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.project.ngopi.WelcomeActivity"/>

        <meta-data
                android:name="com.google.android.maps.v2.API_KEY"
                android:value="@string/api_key_android"/>
    </application>

</manifest>